{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "page": {
      "$ref": "#/definitions/page_type"
    },
    "header": {
      "$ref": "#/definitions/header_type"
    },
    "footer": {
      "$ref": "#/definitions/header_type"
    },
    "style": {
      "$ref": "#/definitions/style_type"
    },
    "mirror_page_margins": {
      "type": "boolean"
    },
    "blank_pages": {
      "type": "boolean"
    },
    "body_column_count": {
      "type": "integer"
    },
    "index_column_count": {
      "type": "integer"
    },
    "column_gap": {
      "$ref": "#/definitions/length_type"
    },
    "force_page_count": {
      "type": "string",
      "enum": [
        "auto",
        "even",
        "odd"
      ]
    },
    "chapter_layout": {
      "type": "string",
      "enum": [
        "MINITOC",
        "BASIC"
      ]
    },
    "cover_image_metadata": {
      "type": "string"
    },
    "cover_image_topic": {
      "type": "string"
    },
    "bookmark_style": {
      "type": "string",
      "enum": [
        "COLLAPSED",
        "EXPANDED"
      ]
    },
    "toc_maximum_level": {
      "type": "integer"
    },
    "task_label": {
      "type": "boolean"
    },
    "include_related_links": {
      "type": "string",
      "enum": [
        "none",
        "all",
        "nofamily"
      ]
    },
    "table_continued": {
      "type": "boolean"
    },
    "page_number": {
      "type": "string",
      "enum": [
        "page",
        "chapter-page"
      ]
    }
  },
  "definitions": {
    "length_type": {
      "type": "string",
      "pattern": "^-?\\d+(\\.\\d+)?(cm|mm|in|pt|pc|px|em)?$"
    },
    "colour_type": {
      "type": "string",
      "pattern": "^(#[a-eA-E0-9]{6}|#[a-eA-E0-9]{3}|rgb\\(\\d+,\\d+,\\d+\\)|rgb\\(\\d+%,\\d+%,\\d+%\\)|transparent|aqua|black|blue|fuchsia|gray|green|lime|maroon|navy|olive|orange|purple|red|silver|teal|white|yellow|inherit)$"
    },
    "font-weight_type": {
      "type": "string",
      "enum": [
        "normal",
        "bold",
        "bolder",
        "lighter",
        "100",
        "200",
        "300",
        "400",
        "500",
        "600",
        "700",
        "800",
        "900",
        "inherit"
      ]
    },
    "border_style_type": {
      "type": "string",
      "enum": [
        "none",
        "hidden",
        "dotted",
        "dashed",
        "solid",
        "double",
        "groove",
        "ridge",
        "inset",
        "outset",
        "inherit"
      ]
    },
    "block_style_type": {
      "type": "object",
      "properties": {
        "background-color": {
          "$ref": "#/definitions/colour_type"
        },
        "padding-before": {
          "$ref": "#/definitions/length_type"
        },
        "padding-end": {
          "$ref": "#/definitions/length_type"
        },
        "padding-after": {
          "$ref": "#/definitions/length_type"
        },
        "padding-start": {
          "$ref": "#/definitions/length_type"
        },
        "end-indent": {
          "$ref": "#/definitions/length_type"
        },
        "border-before-style": {
          "$ref": "#/definitions/border_style_type"
        },
        "border-before-width": {
          "$ref": "#/definitions/length_type"
        },
        "border-before-color": {
          "$ref": "#/definitions/colour_type"
        },
        "border-end-style": {
          "$ref": "#/definitions/border_style_type"
        },
        "border-end-width": {
          "$ref": "#/definitions/length_type"
        },
        "border-end-color": {
          "$ref": "#/definitions/colour_type"
        },
        "border-after-style": {
          "$ref": "#/definitions/border_style_type"
        },
        "border-after-width": {
          "$ref": "#/definitions/length_type"
        },
        "border-after-color": {
          "$ref": "#/definitions/colour_type"
        },
        "border-start-style": {
          "$ref": "#/definitions/border_style_type"
        },
        "border-start-width": {
          "$ref": "#/definitions/length_type"
        },
        "border-start-color": {
          "$ref": "#/definitions/colour_type"
        },
        "font-family": {
          "type": "string"
        },
        "font-size": {
          "$ref": "#/definitions/length_type"
        },
        "color": {
          "$ref": "#/definitions/colour_type"
        },
        "font-weight": {
          "$ref": "#/definitions/font-weight_type"
        },
        "font-style": {
          "type": "string"
        },
        "text-decoration": {
          "type": "string"
        },
        "text-align": {
          "type": "string"
        },
        "start-indent": {
          "$ref": "#/definitions/length_type"
        },
        "line-height": {
          "$ref": "#/definitions/length_type"
        },
        "space-before": {
          "$ref": "#/definitions/length_type"
        },
        "space-after": {
          "$ref": "#/definitions/length_type"
        }
      }
    },
    "inline_style_type": {
      "type": "object",
      "properties": {
        "font-family": {
          "type": "string"
        },
        "font-size": {
          "$ref": "#/definitions/length_type"
        },
        "color": {
          "$ref": "#/definitions/colour_type"
        },
        "background-color": {
          "$ref": "#/definitions/colour_type"
        },
        "font-weight": {
          "$ref": "#/definitions/font-weight_type"
        },
        "font-style": {
          "type": "string",
          "enum": [
            "normal",
            "italic",
            "oblique",
            "backslant",
            "inherit"
