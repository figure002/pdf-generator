        "top": {
          "$ref": "#/definitions/length_type"
        },
        "outside": {
          "$ref": "#/definitions/length_type"
        },
        "bottom": {
          "$ref": "#/definitions/length_type"
        },
        "inside": {
          "$ref": "#/definitions/length_type"
        }
      }
    },
    "odd_type": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "string"
      }
    },
    "header_type": {
      "type": "object",
      "properties": {
        "odd": {
          "$ref": "#/definitions/odd_type"
        },
        "even": {
          "$ref": "#/definitions/odd_type"
        }
      }
    },
    "body_type": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/block_style_type"
        }
      ],
      "properties": {
      }
    },
    "topic_type": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/block_style_type"
        }
      ],
      "properties": {
        "title-numbering": {
          "type": "boolean"
        }
      }
    },
    "dl_type": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/block_style_type"
